<%= form_with model: @student do |form| %>
    <% if @student.errors.any? %>
        <% @student.errors.full_messages.each do |msg| %>
            <h3><%= msg%></h3>
        <% end %>
    <% end %>
    <div>
        <%= form.label :first_name %>
        <%= form.text_field :first_name %>
    </div>
    <br>
     <div>
        <%= form.label :last_name %>
        <%= form.text_field :last_name %>
    </div>
    <br>
     <div>
        <%= form.label :email %>
        <%= form.email_field :email %>
    </div>
    <br>
     <div>
        <%= form.label :date_of_birth %>
        <%= form.date_field :date_of_birth %>
    </div>
   
    <br>
     <div>
        <%= form.label :local_address %>
        <%= form.text_field :local_address %>
    </div>
    <br>
     <div>
        <%= form.label :permenant_address %>
        <%= form.text_field :permenant_address %>
    </div>
    <br>
     <div>
        <%= form.label :permanent_contact_number %>
        <%= form.text_field :permanent_contact_number %>
    </div>
    <br>
     <div>
        <%= form.label :alternate_contact_number %>
        <%= form.text_field :alternate_contact_number %>
    </div>
    <br>
    <div>
     <%= form.submit %>
    </div>
<% end %>

