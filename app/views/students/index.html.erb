<h1>Listing all students </h1>
<%= link_to 'Add New Student', new_student_path %>
<table>
    <thead>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Date of Birth</th>
        <th>Local address</th>
        <th>Permanent Address</th>
        <th>Permanent Contact Number</th>
        <th>Alternate Contact Number</th>
        <th colspan=3>Action</th>
    </thead>
    <tbody>
    <% @students.each do |student|%>
        <tr>
            <td><%= student.first_name%></td>
            <td><%= student.last_name%></td>
            <td><%= student.email%></td>
            <td><%= student.date_of_birth%></td>
            <td><%= student.local_address%></td>
            <td><%= student.permenant_address%></td>
            <td><%= student.permanent_contact_number%></td>
            <td><%= student.alternate_contact_number%></td>
            <td><%= link_to 'View', student %></td>
            <td><%= link_to 'Edit', edit_student_path(student) %></td>
            <td><%= button_to 'Delete', student_path(student), method: :delete, data: {confirm: "Are you sure?"} %></td>
        </tr>
    <% end %>
    </tbody>
</table>